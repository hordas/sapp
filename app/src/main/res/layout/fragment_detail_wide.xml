<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="udatraining.dyomin.com.udaproj1.DetailFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="56dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_day_of_week_fragment_detail"
                    android:fontFamily="sans-serif-condensed"
                    android:minWidth="120dp"
                    android:textSize="24sp"
                    android:text="Today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textview_date_fragment_detail"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="20sp"
                    android:textColor="@color/grey_700"
                    android:text="October 18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_max_temp_fragment_detail"
                    android:fontFamily="sans-serif-light"
                    android:textSize="96sp"
                    android:text="10°"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textview_min_temp_fragment_detail"
                    android:textColor="@color/grey_700"
                    android:textSize="48sp"
                    android:layout_marginLeft="8dp"
                    android:text="7°"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textview_humidity_detail_fragment"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_marginTop="4dp"
                    android:text="Humidity 80%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <udatraining.dyomin.com.udaproj1.CompassView
                    android:id="@+id/compassview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:id="@+id/textview_wind_detail_fragment"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_marginTop="4dp"
                    android:text="Wind: S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textview_pressure_detail_fragment"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_marginTop="4dp"
                    android:text="Pressure: 1007 kPa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageview_icon_detail_fragment"
                    android:src="@drawable/ic_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textview_forecast_description_detail_fragment"
                    android:fontFamily="sans-serif-condesed"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/grey_700"
                    android:text="Clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</ScrollView>
